@model leave_manage_App.Models.LeaveRequestEmployeeViewVM
@{
    ViewData["Title"] = "MyLeave";
}

<div>

    <h1> Leave Allocations</h1>

   <div class="jumbotron">

       <div class="card">
           <ul class="list-group list-group-flush" >

               @foreach(var item in Model.LeaveAllocations)
            {
                <li class="list-group-item">
                    <h5> @item.LeaveType.Name <span class="badge badge-secondary"> @item.NumberOfDays </span> </h5>
                </li>
            }

           </ul>
       </div>

   </div>

    <br />
    <hr />
    <br />

    <h1>My Leave Records</h1>

    <table id="tbldata" class="table">
        <thead>
            <tr>

                <th>
                    Start Date
                </th>
                <th>
                    End Date
                </th>
                <th>
                    Leave Type
                </th>
                <th>
                    Date Requested
                </th>
                <th>
                    Approval Status
                </th>

                <th>
                    Cancel Request
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.LeaveRequests)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LeaveType.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateRequested)
                    </td>
                    <td>
                        @if (item.Approved == true)
                        {
                            <span class="badge badge-success"> Approved </span>
                        }
                        else if (item.Approved == false)
                        {
                            <span class="badge badge-danger"> Rejected </span>
                        }
                        else
                        {
                            <span class="badge badge-warning"> Pending </span>
                        }
                    </td>
                    <td>

                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id"> <i class="fa fa-trash" aria-hidden="true"></i> Delete</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

